<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ListadorDeFundos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green_medium</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Subtitles">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Titles">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ActivityContents">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MediaHeaders">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ProfitDetails">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ChipStates" parent="Widget.MaterialComponents.Chip.Choice" >
        <item name="chipBackgroundColor">@color/chip_background_color_list</item>
        <item name="android:textColor">@color/chip_text_color_list</item>
    </style>
</resources>